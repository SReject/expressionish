{
    "compilerOptions": {
        "target": "ES2020",

        "module": "commonjs",
        "esModuleInterop": true,
        "lib": ["ES2020"],
        "noImplicitAny": true,

        "rootDir": "src",
        "outDir": "lib",

        "incremental": true,
        "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
        "declaration": true,

        "sourceMap": true,

        "preserveConstEnums": false,

        "newLine": "lf",
        "removeComments": true
    },
    "files":[
        "./src/index.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}