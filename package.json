{
    "author": "SReject",
    "name": "expressionish",
    "version": "0.1.3",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/SReject/expressionish"
    },
    "files": [
        "./dist/expressionish.mjs",
        "./dist/expressionish.d.ts",
        "./dist/expressionish.mjs.map"
    ],
    "type": "module",
    "exports": {
        "types": "./dist/expressionish.d.ts",
        "import": "./dist/expressionish.mjs"
    },
    "scripts": {
        "lint": "eslint -c ./eslint.config.mjs ./src/**/*.ts",
        "test": "npm run build && mocha",
        "test:only": "mocha",
        "build": "npm run build:js && npm run build:types",
        "build:js": "esbuild ./src/expressionish.ts --bundle --sourcemap --format=esm --minify --outfile=dist/expressionish.mjs",
        "build:types": "tsc --project ./tsconfig.json --declaration --emitDeclarationOnly --outFile ./dist/expressionish.d.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@tsconfig/node22": "^22.0.5",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.2",
        "mocha": "^11.7.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    }
}
